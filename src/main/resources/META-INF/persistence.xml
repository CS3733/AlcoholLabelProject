<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="COLA" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>com.emeraldElves.alcohollabelproject.Data.AccountEntity</class>
        <class>com.emeraldElves.alcohollabelproject.Data.ApplicationEntity</class>
        <class>com.emeraldElves.alcohollabelproject.Data.ApplicantEntity</class>
        <class>com.emeraldElves.alcohollabelproject.Data.AgentEntity</class>
        <class>com.emeraldElves.alcohollabelproject.Data.SuperAgentEntity</class>
        <class>com.emeraldElves.alcohollabelproject.Data.ImageEntity</class>
        <class>com.emeraldElves.alcohollabelproject.Data.FileEntity</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyDialect"/>
            <!--
              if you don't have a database already created
              append ;create=true to end of the jdbc url
            -->
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:testDb;create=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <!--
              if you just created the database, maybe
              you want hibernate to create a schema for you

              <property name="hibernate.hbm2ddl.auto" value="create"/>
            -->
        </properties>
    </persistence-unit>
</persistence>